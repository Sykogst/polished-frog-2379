<h1>Doctor Information</h1>
<p>Name: <%= @doctor.name %></p>
<p>Specialty: <%= @doctor.specialty %></p>
<p>Education: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.hospital.name %></p>

<h1>Patients</h1>
<% @doctor.patients.each do |patient| %>
  <div id=<%= "patient-#{patient.id}" %>>
    <%= patient.name %>
    <%= button_to "Delete", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
  </div>
<% end %>
